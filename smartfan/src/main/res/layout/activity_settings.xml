<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dt11.student16.smartfan.ScheduleActivity">

    <RelativeLayout
        android:id="@+id/layoutButtonsTop"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btnReturn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@android:drawable/ic_menu_revert"
            android:drawablePadding="6dp"
            android:drawableTint="@color/colorPrimary"
            android:text="@string/returnButton" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutButtonsTop"
        android:columnCount="2"
        android:rowCount="2"
        android:paddingTop="10dp"
        android:id="@+id/gridIP">
        <TextView
            android:layout_columnWeight=".6"
            android:layout_columnSpan="1"
            android:layout_height="wrap_content"
            android:text="@string/textIP"
            android:textSize="@dimen/standard_text_size"/>
        <TextView
            android:layout_columnWeight=".4"
            android:layout_columnSpan="1"
            android:layout_height="wrap_content"
            android:text="@string/textPort"
            android:textSize="@dimen/standard_text_size"/>
        <EditText
            android:id="@+id/textIP"
            android:hint="@string/hintIP"
            android:layout_columnWeight=".6"
            android:layout_columnSpan="1"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="15"
            android:digits="0123456789."/>
        <EditText
            android:id="@+id/textPort"
            android:hint="@string/hintPort"
            android:layout_columnWeight=".4"
            android:layout_columnSpan="1"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="5"
            android:digits="0123456789"/>
    </GridLayout>

    <GridLayout
        android:id="@+id/gridSettings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:layout_below="@+id/gridIP"
        android:layout_above="@+id/layoutButtons"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/textTimeFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textTime"
            android:textSize="@dimen/standard_text_size"/>

        <RadioGroup
            android:id="@+id/rdoGrpTimeFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:paddingTop="2dp">
            <RadioButton
                android:id="@+id/rdo24h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rdo24h"
                android:textSize="@dimen/standard_text_size"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/rdo12h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rdo12h"
                android:textSize="@dimen/standard_text_size"/>
        </RadioGroup>
    </GridLayout>

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="end">
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnSave" />
    </LinearLayout>
</RelativeLayout>